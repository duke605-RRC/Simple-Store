<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>Stock quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= product.stock_quantity %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>

<p><strong>Average Price: </strong><%= number_to_currency(@average) %></p>
<p><strong>Highest Price: </strong><%= number_to_currency(@max) %></p>
<p><strong>Number of Products: </strong><%= @prices.length %></p>
<p><strong>Total Stock: </strong><%= @total_stock %></p>

<br />
<p><strong>Start of Chunky Bacon</strong></p>
<%= 100.times do %>
    <p>Chunky Bacon</p>
<% end %>
